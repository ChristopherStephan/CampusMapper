<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.ifgi.sitcom.campusmapper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/> 
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_home"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.ifgi.sitcom.campusmapper.activities.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.ifgi.sitcom.campusmapper.activities.ChooseLocationActivity"
            android:label="@string/title_activity_building_information" >
        </activity>
        <activity
            android:name="de.ifgi.sitcom.campusmapper.activities.ImageSourceActivity"
            android:label="@string/title_activity_image_source" >
        </activity>
        <activity
            android:name="de.ifgi.sitcom.campusmapper.activities.CroppingActivity"
            android:label="@string/title_activity_transformation" >
        </activity>
        <activity
            android:name="de.ifgi.sitcom.campusmapper.activities.MappingActivity"
            android:label="@string/title_activity_mapping" >
        </activity>
        <activity
            android:name="de.ifgi.sitcom.campusmapper.activities.IndoorConnectionActivity"
            android:label="@string/title_activity_stairs_location" >
        </activity>
        <activity
            android:name="de.ifgi.sitcom.campusmapper.activities.OutdoorConnectionActivity"
            android:label="@string/title_activity_entrance_location" >
        </activity>
    </application>

</manifest>